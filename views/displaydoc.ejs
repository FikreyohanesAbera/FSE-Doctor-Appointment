    <div class="wrapper">
        <div class="contain">
          <form role="search" method="get" class="search-form form" action="" autocomplete="off">
            <label>
                <input type="search" class="search-field" placeholder="Doctor name or specialization" name="search" id = 'search'/>
            </label>
            <input type="submit" class="search-submit button" value="&#xf002" />
        </form>
        </div>
      </div>


    <div id="top--doctors">


        
        <%  for(var i = 0; i < doctorsData.length; i++){ %>
                   
            <div class="doc--card">
                <h2> <%= doctorsData[i].name%> </h2>
                <h4><%= doctorsData[i].specialization %></h4>
                <h5><%= doctorsData[i].phone%></h5>
            </div>

        
        <% } %> 

    </div>
    <a href="/book">
        <div class="card">
            <h1>stupdi</h1>
            <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Reiciendis iure provident maxime recusandae necessitatibus dicta.</p>
        </div>

    </a>
    <div id="doc--container"></div>


    <script>
        let searchInput = document.getElementById("search");
        const topDocs = document.getElementById("top--doctors");
        searchInput.addEventListener("input",(e) => {
            const docContainer = document.getElementById("doc--container");
            if (docContainer){
                document.body.removeChild(docContainer);
            }
            const parent = document.createElement("div");
            parent.setAttribute("id","doc--container");
            const value = e.target.value;
            console.log(value);
            if (value){
                fetch("/findadoc", {
                    method: 'POST',
                    headers: {
                      'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ searchValue: value })
                  })
                  .then(response => response.json())
                  .then(data => {
                    console.log(topDocs);
                    if (document.body.contains(topDocs)){
                        document.body.removeChild(topDocs);
                    }
                    console.log(data);
                    
                    data.forEach(elt => {
                        let doctorCard = document.createElement("div");
                        doctorCard.classList.add("doc--card");
                        let name = document.createElement("h2");
                        let nameContent = document.createTextNode(elt.name);
                        name.appendChild(nameContent);
                        let specContent = document.createTextNode(elt.specialization);
                        let specialization = document.createElement("h4");
                        specialization.appendChild(specContent);
                        doctorCard.appendChild(name);
                        doctorCard.appendChild(specialization);
                        parent.appendChild(doctorCard);
                        document.body.appendChild(parent);
                        
                    })
                });

            }

            
        });
        
    </script>
    
</body>
</html>