<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="css/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Baloo+2&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js"></script>
</head>
<body>
    <%  for(var i = 0; i < data.length; i++){ %>          
        <div class="lab-div" style="background-color: cyan;">
            <!-- <span><%= data[i].patientName%> </span> -->
            <span id="docName"> <%= data[i].doctorName%> </span>
            <p><%= data[i].description %></p>
            <!-- <button class="labapprove" value = "<%= data[i].labreqId %>" >Approve</button>
            <button class="labreject" value = "<%= data[i].labreqId %>">Reject</button> -->
        </div>
    <% } %> 
    <div class="container my-5">
        <div class="card" style="width: 40rem;">
            <div class="card-body">
                <form id="form" method="post" action="/labrequest">
                    <h4>Apply</h4>
                    <div class="mb-3">
                        <label for="email" class="form-label">Patient email</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="alert alert-success" role="alert" id="success" style="display: none;"></div>
                    <div class="alert alert-danger" role="alert" id="error" style="display: none;"></div>
                    <div class="mb-3">
                        <label for="spec" class="form-label">Description</label>
                        <textarea class="form-control" id="desc" name="desc" rows="4" cols="10" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="lab" class="form-label">Lab Technician Name</label>
                        <input type="text" class="form-control" id="name" name="name" required>

                    </div>

                    <button type="submit" class="btn btn-primary">Apply Request</button>

                </form>
            </div>
        </div>
    </div>
    
</body>
</html>